{
  "name": "reliefweb/api-indexer",
  "description": "Standalone application to index the RW database into the API elasticsearch indexes.",
  "keywords": [
    "reliefweb",
    "api",
    "elasticsearch"
  ],
  "type": "application",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packagist.org"
    },
    {
      "packagist": false
    }
  ],
  "require": {
    "php": ">=8.0",
    "league/commonmark": "^2.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "drupal/coder": "^8.3"
  },
  "autoload": {
    "psr-0": {
      "RWAPIIndexer": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "./composer-phpcs-install.sh",
      "git config core.hooksPath git-hooks"
    ],
    "post-update-cmd": [
      "./composer-phpcs-install.sh",
      "git config core.hooksPath git-hooks"
    ]
  }
}
