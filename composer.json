{
  "name": "reliefweb/api-indexer",
  "description": "Standalone library to index the RW database into the API elasticsearch indexes.",
  "keywords": [
    "reliefweb",
    "api",
    "elasticsearch"
  ],
  "type": "library",
  "require": {
    "php": ">=8.0",
    "league/commonmark": "^2.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^13",
    "drupal/coder": "^8.3"
  },
  "autoload": {
    "psr-4": {
      "RWAPIIndexer\\": "src/RWAPIIndexer"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RWAPIIndexer\\Tests\\": "tests"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@phpcs-install",
      "@git-hooks"
    ],
    "post-update-cmd": [
      "@phpcs-install",
      "@git-hooks"
    ],
    "phpcs-install": "./composer-phpcs-install.sh || exit 0",
    "git-hooks": "test -d .git && git config core.hooksPath git-hooks || exit 0",
    "test": "./vendor/bin/phpunit"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
